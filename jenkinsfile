node {
 try  {
  notify('Job Started') 
     
  stage('Git-Checkout') {
   git 'https://github.com/vinni06/terraformrepo.git'
  }
    
 //def project_path="capstoneproject/capstoneproject/"
 
// dir(project_path) {

stage('Download package from JFrog') {
            def server= Artifactory.server 'Artifactory'
            def downloadSpec = """{
            "files": [
            {
                "pattern": "examples-repo-local/petclinic.war",
                "target": "./petclinic.war"
            }
            ]
            }"""
        server.download(downloadSpec)
    }
    stage('test') {sh 'ls -a'}

	stage('AWS - Production Server Provisioning'){
	   sh label: 'terraform', script: '/bin/terraform  init'
	   sh label: 'terraform', script: '/bin/terraform  apply -input=false -auto-approve'
	   }
	   stage('Deployment into production'){
 	 sh label: 'terraform', script: 'sudo ansible-playbook -i /root/.jenkins/workspace/pipe-Terraform/inventory -u ubuntu --key /root/.ssh/vkey.pem ./web-playbook.yaml'
     }
  
	   
   
//}	-----------dir end---------  

 notify('Job Completed')   
} catch (err) {
  notify("Error ${err}")
  currentBuild.result = 'FAILURE'
}
}



def notify(status){
    emailext (
	to: "emmanenivineela6@gmail.com",
	subject: "${status}: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'",
	 body: """<p>${status}: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]':</p>
	<p>Check console output at <a href='${env.BUILD_URL}'>${env.JOB_NAME} [${env.BUILD_NUMBER}]</a></p>""",
		)
	}
